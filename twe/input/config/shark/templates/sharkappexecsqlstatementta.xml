<Application Id="executesqlwithstatement" Name="Execute SQL with statement">
   <Description>Please define output Formal Parameters if necessary (read TWS documentation)</Description>
   <FormalParameters>
      <FormalParameter Id="data_source" IsArray="false" Mode="IN">
         <DataType>
            <BasicType Type="STRING"/>
         </DataType>
         <Description>Data source name</Description>
      </FormalParameter>
      <FormalParameter Id="statement" IsArray="false" Mode="IN">
         <DataType>
            <BasicType Type="STRING"/>
         </DataType>
         <Description>SQL Statement</Description>
      </FormalParameter>
   </FormalParameters>
   <ExtendedAttributes>
        <ExtendedAttribute Name="ToolAgentClass" Value="org.enhydra.shark.toolagent.ExecuteSqlToolAgent"/>
    </ExtendedAttributes>
</Application>
